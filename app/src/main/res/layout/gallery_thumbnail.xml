<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="myViewModel"
            type="com.simformsolutions.ashutoshtiwari.glidesampleapp.viewmodel.MyViewModel" />
    </data>

    <com.simformsolutions.ashutoshtiwari.glidesampleapp.view.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dec_movie_image"
            android:scaleType="centerCrop"
            app:image="@{myViewModel.imageUrl}" />

    </com.simformsolutions.ashutoshtiwari.glidesampleapp.view.SquareLayout>
</layout>
